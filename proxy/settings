server {
    listen 80;
    server_name api.yourdomain.com auth.yourdomain.com symfony.yourdomain.com;
    return 301 https://$host$request_uri; # Redirect HTTP to HTTPS
}

# Repeat this server block for each subdomain, adjusting server_name, ssl_certificate paths, and proxy_pass as needed
server {
    listen 443 ssl;
    server_name api.yourdomain.com;

    ssl_certificate /path/to/your/certificate.pem;
    ssl_certificate_key /path/to/your/private.key;

    location / {
        proxy_pass http://api:3001; # Docker service name and internal port
        include /etc/nginx/proxy_params;
    }
}
